﻿@using PracticaFrontWS.Services.Implementaciones;
@model PracticaFrontWS.Models.PersonaViewModel
<div class="row">
     
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label">Cuil</label>
            <input type="text" class="form-control" id="cuil" name="cuil" value="@Model.Cuil" readonly />
            </div>
            <div class="form-group">
                <label class="control-label">Apellido y Nombre</label>
            <input class="form-control" id="ApellidoYNombre" name="ApellidoYNombre" value="@Model.ApellidoYNombre" readonly />
            </div>
            <div class="form-group">
                <label class="control-label">Fecha de Nacimiento</label>
            <input type="text" class="form-control" id="FechaNacimiento" name="FechaNacimiento" value="@Model.FechaNacimiento.ToString("dd/MM/yyyy")" readonly />
            </div>
        <div class="form-group mb-3">
            <label class="control-label">Zonas</label>
            <select asp-items="@(new SelectList(ViewBag.zonas,"idzona","zona",Model.idzona))" id="idzona" class="form-control" disabled>
                <option value="">Seleccione una zona</option>

            </select>
        </div>
            <div class="form-group">         
                <button type="button" id="habilitar" onclick="HabilitarCampos()" class="btn btn-default">Editar</button>
                <button type="button" class="btn btn-primary" style="display:none" id="botonAgregar">Guardar</button>
                <a id="#OpenModal" onclick="ModalEliminar()" class="btn btn-danger">Eliminar</a>
            </div>
        </div>
        <input type="hidden" id="UrlPostPersonas" value="@Url.Action("ModificarPersona","Home")" />

</div>
<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Eliminar</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <p>Desea Eliminar el Registro?</p>
            </div>
            <div class="modal-footer">
                <button type="button" id="hide" class="btn btn-secondary" data-dismiss="modal">No</button>
                <a type="button" href="@Url.Action("Index","Home")" id="btnID" class="btn btn-danger">Si</a>
                <input type="hidden" id="UrlPostPersonasD" value="@Url.Action("EliminarPersona","Home")" />
            </div>
        </div>
    </div>
</div>
<div class="modal" id="myModalUpdate">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Personas</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <p>Datos Modificados Correctamente </p>
            </div>
            <div class="modal-footer">
                <a type="button" href="@Url.Action("Index","Home")" id="OK" class="btn btn-primary">OK</a>

            </div>
        </div>
    </div>
</div>
<div class="modal" id="myModalError">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Registro Personas</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <p>Por favor Complete los campos</p>
            </div>
            <div class="modal-footer">

                <a type="button" href="" id="hide" class="btn btn-danger">OK</a>
            </div>
        </div>
    </div>
</div>
<script>
    window.addEventListener("load", function (event) {
        Update.init();
        del.init();
    });
</script>